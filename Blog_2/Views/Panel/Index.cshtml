@model IEnumerable<Post>

@{

}

<h2>Admin Panel!</h2>
<a asp-controoller="Panel" asp-action="Edit">
    Add a new post
</a>


<div>
    <ul>
        @foreach (var post in Model)
        {
            <li>
                @post.Title
                -
                <a asp-controoller="Panel" asp-action="Edit" asp-route-id="@post.Id">
                    Edit
                </a>
                -
                <a asp-controoller="Panel" asp-action="Remove" asp-route-id="@post.Id">
                    Remove
                </a>
            </li>
        }
    </ul>
</div>